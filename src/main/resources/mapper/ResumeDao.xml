    </resultMap>

    <sql id="selectResume">
        SELECT * FROM RESUME
    </sql>

    <select id="queryResumeById" parameterType="Resume" resultMap="resumeMap">
        <include refid="selectResume"></include>
        <where>
            <choose>
                <when test="id != null">
                   AND id = #{id}
                </when>
                <otherwise>
                    AND 1=2
                </otherwise>
            </choose>
        </where>
    </select>

    <select id="queryResumeByCid" parameterType="Customer" resultMap="resumeMap">
        <include refid="selectResume"></include>
        <where>
            <choose>
                <when test="customerId != null">
                    AND customer_id = #{id}
                </when>
                <otherwise>
                    AND 1=2
                </otherwise>
            </choose>
        </where>
    </select>

